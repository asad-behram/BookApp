<table class="table">
  <thead>
    <tr>
      <th scope="col">BOOKS</th>
      <th scope = "col">TAGS</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @book.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td>
          <% b.tags.each do |t| %>
            <button type="button" class="btn btn-primary"><%= t.name %></button>
          <% end %>
        </td>
        <td><%= link_to 'Show', b %></td>
        <td><%= link_to 'Edit', edit_book_path(b) %></td>
        <td><%= link_to 'Destroy', b, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>